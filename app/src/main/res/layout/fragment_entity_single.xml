<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/entity_aliases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aliases"
                android:textSize="24sp"
                android:textColor="@android:color/black"/>
            <ImageView
                android:id="@+id/entity_aliases_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:src="@drawable/ic_hardware_keyboard_arrow_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/entity_aliases_list"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:paddingLeft="8dp">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/entity_labels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Labels"
                android:textSize="24sp"
                android:textColor="@android:color/black"/>
            <ImageView
                android:id="@+id/entity_labels_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:src="@drawable/ic_hardware_keyboard_arrow_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/entity_labels_list"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:paddingLeft="8dp">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/entity_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descriptions"
                android:textSize="24sp"
                android:textColor="@android:color/black"/>
            <ImageView
                android:id="@+id/entity_desc_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:src="@drawable/ic_hardware_keyboard_arrow_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/entity_desc_list"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:paddingLeft="8dp">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/entity_claims"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Claims"
                android:textSize="24sp"
                android:textColor="@android:color/black"/>
            <ImageView
                android:id="@+id/entity_claim_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:src="@drawable/ic_hardware_keyboard_arrow_right"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/entity_claim_list"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:paddingLeft="8dp">
        </LinearLayout>
    </LinearLayout>
</ScrollView>